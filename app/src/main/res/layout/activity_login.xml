<?xml version="1.0" encoding="utf-8"?>
<com.jssj.jiangye.widget.SwipeableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pullback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:background="@color/main_back"
    android:fitsSystemWindows="true"
    >
   <LinearLayout
       android:id="@+id/parallax_linearout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:src="@drawable/top"
           android:scaleType="centerCrop"/>
       <EditText
           android:id="@+id/et_name"
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:background="@drawable/icon_input_bg"
           android:hint="手机号"
           android:inputType="number"
           android:padding="@dimen/item_padding"
           android:textColor="#1E1E1E"
           android:textColorHint="#8c8c8c"
           android:paddingLeft="@dimen/item_padding"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginTop="10dp"
           android:gravity="center_vertical"
           android:orientation="horizontal">

           <EditText
               android:id="@+id/et_picCodes"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@drawable/icon_input_bg"
               android:hint="图片验证码"
               android:padding="@dimen/item_padding"
               android:textColor="#1E1E1E"
               android:textColorHint="#8c8c8c"
               />

           <ImageView
               android:id="@+id/iv_showCode"
               android:layout_width="100dp"
               android:layout_height="match_parent"
               android:background="@color/alpha_90_white" />

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginTop="10dp"
           android:gravity="center_vertical">

           <EditText
               android:id="@+id/et_pwd"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@drawable/icon_input_bg"
               android:hint="验证码"
               android:inputType="number"
               android:padding="@dimen/item_padding"
               android:textColor="#1E1E1E"
               android:textColorHint="#8c8c8c" />

           <Button
               android:id="@+id/bt_code"
               android:layout_width="100dp"
               android:layout_height="match_parent"
               android:background="#ee791b"
               android:foreground="?attr/selectableItemBackground"
               android:text="获取"
               android:gravity="center"
               android:textColor="#FFF" />

       </LinearLayout>



       <Button
           android:id="@+id/bt_login"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginTop="40dp"
           android:background="@drawable/icon_input_bg"
           android:foreground="?attr/selectableItemBackground"
           android:padding="@dimen/item_padding"
           android:gravity="center"
           android:text="登录"
           android:textColor="#E11700" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:orientation="horizontal">
           <ImageView
               android:id="@+id/select_point"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="4.5dp"
               android:src="@drawable/select_point_selector"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="选中即代表同意"
               android:textColor="#8c8c8c"
               android:textSize="12sp" />
           <TextView
               android:id="@+id/tv_accept"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="《将夜用户协议》"
               android:textColor="#8c8c8c"
               android:textSize="12sp" />
       </LinearLayout>



   </LinearLayout>
    </com.jssj.jiangye.widget.SwipeableLayout>
