<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_summary"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/transparent"
    android:layout_gravity="top"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">

    <TextView
        android:id="@+id/tv_desc"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="共10条评论" />

    <TextView
        android:id="@+id/tv_hot"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/tv_new"
        android:background="?attr/selectableItemBackground"
        android:drawableRight="@drawable/selector_hot"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/tv_latest"
        android:textColor="@color/alpha_50_black" />

    <TextView
        android:id="@+id/tv_new"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="?attr/selectableItemBackground"
        android:drawableStart="@drawable/selector_new"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/tv_news"
        android:textColor="@color/alpha_50_black" />

</RelativeLayout>
