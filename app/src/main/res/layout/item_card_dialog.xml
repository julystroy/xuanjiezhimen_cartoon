<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/ll_buy_card"
              android:layout_width="wrap_content"
              android:layout_height="339.3dp"
              >
    <ImageView
        android:id="@+id/iv_experience_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        />


        <TextView
            android:id="@+id/tv_markets_count"
            android:layout_above="@+id/tv_markets_desc"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_marginBottom="2.7dp"
            android:layout_height="wrap_content"
            android:text="100灵石"
            android:textSize="13sp"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/tv_markets_desc"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/ll_buy"
            android:layout_width="150dp"
            android:layout_marginBottom="4.7dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="使用后可以限定时间内经验翻倍"
            android:visibility="visible"
            />


    <LinearLayout
        android:gravity="center"
        android:id="@+id/ll_buy"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/add_or_down"/>
        <TextView
            android:id="@+id/tv_pay_stone_count"
            android:layout_marginTop="10dp"
            android:layout_width="154dp"
            android:layout_height="38.7dp"
            android:layout_marginBottom="15.3dp"
            android:text="购买"
            android:textColor="@color/alpha_90_white"
            android:gravity="center"
            android:textSize="18sp"

            android:background="@drawable/background_fullred"/>
    </LinearLayout>



</RelativeLayout>