<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/llimag_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/icon_cover"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:scaleType="center"
                />

            <com.jssj.jiangye.widget.LabelView
                xmlns:lv="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tv_module"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                lv:lv_text="Hot"
                lv:lv_text_size="12sp"/>
         <!--   <TextView
                android:id="@+id/tv_module"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:textSize="12sp"
                android:text="@string/tab_action"
                />-->
        </FrameLayout>

        <TextView
            android:id="@+id/item_imag_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="精彩活动快来参加"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_imag_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15分钟前"/>
            <TextView
                android:id="@+id/item_imag_comment"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>