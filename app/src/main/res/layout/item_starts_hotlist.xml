<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="160dp">

<RelativeLayout
    android:id="@+id/item_hot_star_desc"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/itemiv_hot_star"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/itemiv_hot_star"
        android:gravity="center|left"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/star_hot_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:text="XX凡饰宁缺"/>
        <TextView
            android:id="@+id/star_hot_charm_num"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="魅力值：12000"/>
        
        
    </LinearLayout>

    <ImageView
        android:id="@+id/send_flower"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"/>
</RelativeLayout>
</android.support.v7.widget.CardView>