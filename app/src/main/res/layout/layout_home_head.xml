<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_gravity="bottom"
              android:elevation="5dp"
              app:layout_behavior="@string/bottom_view_behavior"
              android:orientation="horizontal"
              android:weightSum="5"
              android:layout_width="match_parent"
              android:layout_height="50dp">

    <TextView
        android:id="@+id/novel_download"
        android:background="@drawable/background_white"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="下载"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:background="@drawable/background_white"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/novel_read"
            android:layout_width="match_parent"
            android:text="原著阅读"
            android:layout_height="match_parent"
            android:gravity="center"/>
        <com.jssj.jiangye.widget.DragPointView
            android:id="@+id/tv_dragponit"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/alpha_90_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1200"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/novel_list"
        android:background="@drawable/background_white"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="目录"
        android:layout_height="match_parent"/>
</LinearLayout>