<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
                  android:id="@+id/ll_novel_list"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="12dp"
                  android:layout_marginTop="3.3dp"
                  android:layout_marginBottom="3.3dp">

        <ImageView
            android:id="@+id/iv_point"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_point_selector"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_novel_list"
            android:layout_marginLeft="8.7dp"
            android:background="@drawable/background_white"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第一章：猴头出世"
            android:textSize="13.3sp"
            android:textColor="@color/select_text_color"
            android:drawableRight="@drawable/icon_right_selector"
            android:paddingRight="10dp"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>