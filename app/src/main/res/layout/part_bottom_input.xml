<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/alpha_50_white"
     app:layout_behavior="@string/bottom_view_behavior"
    android:gravity="center_vertical"
    >

    <EditText
        android:id="@+id/et_input"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/background_white"
        android:gravity="center_vertical"
        android:hint="说点什么..."
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:layout_marginLeft="16.7dp"
        android:layout_marginTop="6.7dp"
        android:layout_marginBottom="6.7dp"
        android:textColor="#2f2f2f"
        android:textSize="12.5sp" />

    <Button
        android:id="@+id/send_bt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="13.3dp"
        android:layout_marginRight="16.3dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/et_input"
        android:background="@drawable/background_white"
        android:text="发送"
        android:visibility="gone" />



    <RelativeLayout
        android:id="@+id/ll_like"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:layout_marginRight="16.3dp"
        android:layout_marginLeft="13.3dp"
        android:visibility="visible"
        >


        <ImageView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/icon_like"/>
        <TextView
            android:id="@+id/tv_comment_num"
            android:background="@drawable/background_fullred"
            android:text="110"
            android:layout_marginLeft="17dp"

            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textSize="8.5sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:paddingRight="16.7dp"
        android:scaleType="center"
        android:visibility="visible"
        android:src="@mipmap/icon_share" />

</LinearLayout>