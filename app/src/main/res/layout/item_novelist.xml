<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/novel_title"
        android:gravity="center_vertical"
        android:text="标题"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:typeface="serif"
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <TextView
        android:id="@+id/novel_content"
        android:layout_width="match_parent"
        android:lineSpacingExtra="1dp"
        android:layout_height="wrap_content"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:weightSum="3"
       android:orientation="horizontal">
       <RelativeLayout
           android:id="@+id/novel_answer_question"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_margin="8dp"
           android:layout_height="match_parent">

           <TextView
               android:background="@drawable/black_background"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>
           <TextView
               android:id="@+id/novel_answer_num"
               android:text="100"
               android:layout_marginLeft="75dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/background_fullred"/>
       </RelativeLayout>


       <RelativeLayout
           android:id="@+id/novel_comment"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_margin="8dp"
           android:layout_height="match_parent">

           <TextView
               android:background="@drawable/black_background"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>
           <TextView
               android:id="@+id/novel_coument_num"
               android:text="100"
               android:layout_marginLeft="75dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/background_fullred"/>
       </RelativeLayout>
       <TextView
           android:id="@+id/novel_write_feel"
           android:background="@drawable/black_background"
           android:layout_margin="8dp"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"/>
   </LinearLayout>

</LinearLayout>